ETERBUILDETC=/etc/eterbuild

echog()
{
	if [ "$1" = "-n" ] ; then
		shift
		eval_gettext "$@"
	else
		eval_gettext "$@"; echo
	fi
}
### Gettext ###

# Определяем SUDO для использования
